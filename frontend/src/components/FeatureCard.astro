---
import DoodleCard from './DoodleCard.astro';

export type Tone = "green" | "blue" | "yellow";

export interface Props {
  emoji: string;
  title: string;
  description: string;
  tone?: Tone;
}

const {
  emoji,
  title,
  description,
  tone = "green"
} = Astro.props;

const toneColors = {
  green: "text-brand-green",
  blue: "text-brand-blue",
  yellow: "text-yellow-600"
};

const toneBorders = {
  green: "border-brand-green/20",
  blue: "border-brand-blue/20", 
  yellow: "border-yellow-400/20"
};
---

<DoodleCard
  variant="elevated"
  padding="lg"
  hoverable={true}
  class={`${toneBorders[tone]} transition-colors`}
>
  <div class="flex flex-col items-center text-center">
    <div class={`text-4xl mb-4 ${toneColors[tone]}`}>{emoji}</div>
    <h3 class={`text-xl font-900 mb-2 ${toneColors[tone]}`}>{title}</h3>
    <p class="text-stone-600 leading-relaxed">{description}</p>
  </div>
</DoodleCard>