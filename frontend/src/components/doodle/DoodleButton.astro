---
export interface Props {
  variant?: 'primary' | 'secondary' | 'accent' | 'ghost' | 'outline';
  size?: 'sm' | 'md' | 'lg' | 'xl';
  href?: string;
  type?: 'button' | 'submit' | 'reset';
  disabled?: boolean;
  class?: string;
  id?: string;
  'aria-label'?: string;
  'data-action'?: string;
  'data-variant'?: string;
  'data-size'?: string;
  [key: string]: any;
}

const {
  variant = 'primary',
  size = 'md',
  href,
  type = 'button',
  disabled = false,
  class: className = '',
  id,
  'aria-label': ariaLabel,
  'data-action': dataAction,
  'data-variant': dataVariant,
  'data-size': dataSize,
  ...rest
} = Astro.props;

// Variant styles
const variantClasses = {
  primary: 'bg-brand-green text-white border-brand-green hover:bg-brand-green/90',
  secondary: 'bg-yellow-400 text-stone-900 border-yellow-400 hover:bg-yellow-400/90',
  accent: 'bg-brand-blue text-white border-brand-blue hover:bg-brand-blue/90',
  ghost: 'bg-transparent text-brand-green border-brand-green hover:bg-brand-green/10',
  outline: 'bg-transparent text-stone-700 border-stone-300 hover:bg-stone-50',
};

// Size styles
const sizeClasses = {
  sm: 'px-3 py-1.5 text-sm',
  md: 'px-5 py-2.5 text-base',
  lg: 'px-7 py-3.5 text-lg',
  xl: 'px-9 py-4 text-xl',
};

// Base classes
const baseClasses = `
  relative inline-flex items-center justify-center
  font-medium rounded-lg
  border-2 border-solid
  transition-all duration-200 ease-out
  focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-brand-green
  disabled:opacity-50 disabled:cursor-not-allowed
  hover:-translate-y-0.5 active:translate-y-0
  ${variantClasses[variant]}
  ${sizeClasses[size]}
`;

const Tag = href ? 'a' : 'button';
const finalClassName = `${baseClasses} ${className}`.trim();

const additionalProps = href ? { href, role: 'button' as const } : { type, disabled };
---

<Tag
  id={id}
  class={finalClassName}
  aria-label={ariaLabel}
  data-action={dataAction}
  data-variant={dataVariant || variant}
  data-size={dataSize || size}
  {...additionalProps}
  {...rest}
>
  <slot />
</Tag>
