---
export interface Props {
  title?: string;
  activeSection?: string;
}

const { title = 'Admin Dashboard', activeSection = 'services' } = Astro.props;

const menuItems = [
  { id: 'services', label: 'Services', icon: 'server', path: '/admin/services' },
  { id: 'bookings', label: 'Bookings', icon: 'calendar', path: '/admin/bookings' },
  { id: 'pilgrims', label: 'Pilgrims', icon: 'users', path: '/admin/pilgrims' },
  { id: 'analytics', label: 'Analytics', icon: 'chart-bar', path: '/admin/analytics' },
  { id: 'settings', label: 'Settings', icon: 'cog', path: '/admin/settings' },
];
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  </head>
  <body class="bg-base-100 min-h-screen">
    <div class="drawer lg:drawer-open">
      <input id="admin-drawer" type="checkbox" class="drawer-toggle" />

      <!-- Sidebar -->
      <div class="drawer-side">
        <label for="admin-drawer" class="drawer-overlay"></label>
        <aside class="bg-base-200 w-64 min-h-screen border-r border-base-300">
          <div class="p-4">
            <div class="flex items-center gap-3 mb-8">
              <div class="w-10 h-10 bg-primary rounded-lg flex items-center justify-center">
                <span class="text-primary-content font-bold text-lg">A</span>
              </div>
              <div>
                <h1 class="text-lg font-bold">Admin Panel</h1>
                <p class="text-sm text-base-content/70">Albergue Municipal</p>
              </div>
            </div>

            <nav class="space-y-2">
              {
                menuItems.map((item) => (
                  <a
                    href={item.path}
                    class:list={[
                      'flex items-center gap-3 px-3 py-2 rounded-lg transition-colors',
                      'hover:bg-base-300',
                      activeSection === item.id
                        ? 'bg-primary text-primary-content'
                        : 'text-base-content',
                    ]}
                  >
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      {item.icon === 'server' && (
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d="M5 12h14M5 12a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v4a2 2 0 01-2 2M5 12a2 2 0 00-2 2v4a2 2 0 002 2h14a2 2 0 002-2v-4a2 2 0 00-2-2m-2-4h.01M17 16h.01"
                        />
                      )}
                      {item.icon === 'calendar' && (
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"
                        />
                      )}
                      {item.icon === 'users' && (
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"
                        />
                      )}
                      {item.icon === 'chart-bar' && (
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"
                        />
                      )}
                      {item.icon === 'cog' && (
                        <g>
                          <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"
                          />
                          <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"
                          />
                        </g>
                      )}
                    </svg>
                    <span class="font-medium">{item.label}</span>
                  </a>
                ))
              }
            </nav>
          </div>
        </aside>
      </div>

      <!-- Main content -->
      <div class="drawer-content">
        <!-- Mobile header -->
        <div class="lg:hidden navbar bg-base-100 border-b border-base-300">
          <div class="flex-none">
            <label for="admin-drawer" class="btn btn-square btn-ghost">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M4 6h16M4 12h16M4 18h16"></path>
              </svg>
            </label>
          </div>
          <div class="flex-1">
            <h1 class="text-lg font-bold">{title}</h1>
          </div>
        </div>

        <!-- Page content -->
        <main class="p-6 lg:p-8">
          <slot />
        </main>
      </div>
    </div>
  </body>
</html>
