---
export interface Props {
  variant?: 'default' | 'elevated' | 'subtle' | 'gradient' | 'glass';
  padding?: 'none' | 'sm' | 'md' | 'lg' | 'xl';
  rounded?: 'none' | 'sm' | 'md' | 'lg' | 'xl' | '2xl' | '3xl' | 'full';
  shadow?: 'none' | 'sm' | 'md' | 'lg' | 'xl' | '2xl';
  border?: boolean;
  hover?: boolean;
  glow?: boolean;
  class?: string;
  header?: string;
  footer?: string;
  icon?: string;
  gradient?: 'green' | 'blue' | 'purple' | 'orange' | 'red' | 'teal';
  children: any;
}

const {
  variant = 'default',
  padding = 'md',
  rounded = 'xl',
  shadow = 'lg',
  border = true,
  hover = true,
  glow = false,
  class: className = '',
  header,
  footer,
  icon,
  gradient = 'green',
  children,
} = Astro.props;

const baseClasses = 'relative overflow-hidden transition-all duration-300 ease-in-out';

const variantClasses = {
  default: 'bg-white',
  elevated: 'bg-white transform hover:scale-105',
  subtle: 'bg-gray-50',
  gradient: `bg-gradient-to-br ${
    gradient === 'green'
      ? 'from-green-50 to-emerald-100'
      : gradient === 'blue'
        ? 'from-blue-50 to-cyan-100'
        : gradient === 'purple'
          ? 'from-purple-50 to-pink-100'
          : gradient === 'orange'
            ? 'from-orange-50 to-yellow-100'
            : gradient === 'red'
              ? 'from-red-50 to-pink-100'
              : 'from-teal-50 to-cyan-100'
  }`,
  glass: 'bg-white/20 backdrop-blur-lg border-white/20',
};

const paddingClasses = {
  none: 'p-0',
  sm: 'p-4',
  md: 'p-6',
  lg: 'p-8',
  xl: 'p-10',
};

const roundedClasses = {
  none: 'rounded-none',
  sm: 'rounded-sm',
  md: 'rounded-md',
  lg: 'rounded-lg',
  xl: 'rounded-xl',
  '2xl': 'rounded-2xl',
  '3xl': 'rounded-3xl',
  full: 'rounded-full',
};

const shadowClasses = {
  none: 'shadow-none',
  sm: 'shadow-sm',
  md: 'shadow-md',
  lg: 'shadow-lg',
  xl: 'shadow-xl',
  '2xl': 'shadow-2xl',
};

const borderClasses = border ? 'border border-gray-200' : '';
const hoverClasses = hover ? 'hover:shadow-xl hover:-translate-y-1' : '';
const glowClasses = glow ? 'hover:shadow-2xl hover:shadow-green-500/25' : '';

const cardClasses = `${baseClasses} ${variantClasses[variant]} ${paddingClasses[padding]} ${roundedClasses[rounded]} ${shadowClasses[shadow]} ${borderClasses} ${hoverClasses} ${glowClasses} ${className}`;

const headerClasses = `flex items-center gap-3 pb-4 mb-4 border-b border-gray-100 ${icon ? 'text-2xl' : ''}`;
const footerClasses = `pt-4 mt-4 border-t border-gray-100`;
---

<div class={cardClasses}>
  <!-- Decorative gradient overlay -->
  <div
    class="absolute inset-0 bg-linear-to-br from-white/50 to-transparent opacity-0 hover:opacity-100 transition-opacity duration-300 pointer-events-none"
  >
  </div>

  <!-- Glow effect -->
  {
    glow && (
      <div class="absolute inset-0 bg-linear-to-r from-green-400/20 via-emerald-400/10 to-blue-400/20 rounded-inherit blur-xl opacity-0 hover:opacity-100 transition-opacity duration-500 pointer-events-none" />
    )
  }

  <!-- Header section -->
  {
    header && (
      <div class={headerClasses}>
        {icon && <span class="text-2xl filter drop-shadow-lg">{icon}</span>}
        <h3 class="text-xl font-bold text-gray-900">{header}</h3>
      </div>
    )
  }

  <!-- Main content -->
  <div class="relative z-10">
    {children}
  </div>

  <!-- Footer section -->
  {footer && <div class={footerClasses}>{footer}</div>}
</div>

<style>
  /* Enhanced card animations */
  .rounded-inherit {
    border-radius: inherit;
  }

  /* 3D perspective effect */
  .transform-style-3d {
    transform-style: preserve-3d;
  }

  /* Shimmer effect */
  .card-shimmer::after {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.4), transparent);
    animation: shimmer 2s infinite;
    pointer-events: none;
  }

  @keyframes shimmer {
    0% {
      transform: translateX(-100%);
    }
    100% {
      transform: translateX(100%);
    }
  }

  /* Pulse animation for subtle attention */
  .animate-pulse-slow {
    animation: pulse-slow 3s cubic-bezier(0.4, 0, 0.6, 1) infinite;
  }

  @keyframes pulse-slow {
    0%,
    100% {
      opacity: 1;
    }
    50% {
      opacity: 0.8;
    }
  }

  /* Hover lift effect */
  .hover\:lift:hover {
    transform: translateY(-4px) rotateX(5deg);
    box-shadow:
      0 20px 40px rgba(0, 0, 0, 0.15),
      0 0 0 1px rgba(255, 255, 255, 0.1) inset;
  }
</style>
