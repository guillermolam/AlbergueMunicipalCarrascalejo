---
import RoughFrame from './RoughFrame.astro';

export type Variant = "default" | "elevated";
export type Padding = "sm" | "md" | "lg";

export interface Props {
  variant?: Variant;
  padding?: Padding;
  hoverable?: boolean;
  class?: string;
}

const {
  variant = "default",
  padding = "md",
  hoverable = false,
  class: className = ""
} = Astro.props;

const paddingClasses = {
  sm: "p-4",
  md: "p-6",
  lg: "p-8"
};

const variants = {
  default: "bg-white ring-1 ring-stone-200",
  elevated: "bg-white ring-1 ring-stone-200 shadow-lg"
};

const hoverClasses = hoverable ? "transition-transform hover:-translate-y-1" : "";
---

<RoughFrame
  padding={padding}
  texture="hachure"
  textureOpacity={0.06}
  hover={hoverable}
  class={`ds-card ${variants[variant]} ${paddingClasses[padding]} ${hoverClasses} ${className}`}
>
  <slot />
</RoughFrame>