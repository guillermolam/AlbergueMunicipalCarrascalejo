{
  "name": "albergue-frontend",
  "version": "1.0.0",
  "description": "Frontend for Albergue Municipal Carrascalejo",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "trunk check",
    "lint:fix": "trunk fmt --fix",
    "fmt": "trunk fmt",
    "fmt:check": "trunk check",
    "clean": "rm -rf dist node_modules/.cache",
    "test": "jest",
    "test:watch": "jest --watch",
    "dev:booking": "npm run dev --workspace=@albergue/booking",
    "dev:dashboard": "npm run dev --workspace=@albergue/dashboard",
    "build:all": "npm run build --workspaces"
  },
  "devDependencies": {
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.0",
    "vite": "^5.0.8",
    "typescript": "^5.2.2",
    "tailwindcss": "^3.4.0",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.32",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.4.0",
    "@types/jest": "^29.4.0"
  }
}