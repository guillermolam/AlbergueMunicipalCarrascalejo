---
import Layout from '../layouts/Layout.astro';

export interface Props {
  bookingReference: string;
  pilgrimName: string;
  arrivalDate: string;
  departureDate: string;
  nights: number;
  roomType: 'shared' | 'private';
  totalAmount: number;
  confirmationCode: string;
  qrCode?: string;
  status: 'confirmed' | 'pending';
}

const {
  bookingReference = 'BK' + Date.now().toString(36).toUpperCase(),
  pilgrimName = 'María García',
  arrivalDate = '2024-01-15',
  departureDate = '2024-01-18',
  nights = 3,
  roomType = 'shared',
  totalAmount = 45,
  confirmationCode = 'CONF-' + Math.random().toString(36).substring(2, 10).toUpperCase(),
  status = 'confirmed',
} = Astro.props;

const roomTypeText = roomType === 'shared' ? 'Habitación Compartida' : 'Habitación Privada';
const statusColor = status === 'confirmed' ? 'text-green-600' : 'text-yellow-600';
const statusBg = status === 'confirmed' ? 'bg-green-50' : 'bg-yellow-50';
---

--- import Layout from "../layouts/Layout.astro"; --- import Layout from "../layouts/Layout.astro";
---

<Layout
  title="Reserva Confirmada - Albergue Municipal Carrascalejo"
  description="Tu reserva ha sido confirmada"
>
  <link rel="stylesheet" href="/src/styles/booking-confirmation.css" />
  <main
    class="min-h-screen bg-gradient-to-br from-slate-50 to-slate-100 flex items-center justify-center p-4"
  >
    <div class="w-full max-w-4xl">
      {/* Main Confirmation Card - Enhanced 3D Effect */}
      <div class="bg-white rounded-2xl shadow-deep card-3d relative overflow-hidden metallic-shine">
        {/* 3D Shadow Effect */}
        <div
          class="absolute inset-0 bg-gradient-to-r from-green-400 to-blue-500 opacity-20 blur-xl transform translate-z-10"
        >
        </div>

        {/* Header with Status */}
        <div
          class="relative z-10 bg-gradient-to-r from-green-500 to-emerald-600 text-white p-6 rounded-t-2xl shadow-lg"
        >
          <div class="flex items-center justify-between">
            <div class="flex items-center space-x-4">
              <div
                class="w-16 h-16 bg-white rounded-full flex items-center justify-center shadow-xl transform hover:rotate-12 transition-transform duration-300"
              >
                <svg
                  class="w-10 h-10 text-green-500"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M5 13l4 4L19 7"></path>
                </svg>
              </div>
              <div>
                <h1 class="text-3xl font-bold">¡Reserva Confirmada!</h1>
                <p class="text-green-100 mt-1">Tu alojamiento está garantizado</p>
              </div>
            </div>
            <div
              class={`px-4 py-2 rounded-full ${statusBg} ${statusColor} font-semibold shadow-lg`}
            >
              {status === 'confirmed' ? 'CONFIRMADO' : 'PENDIENTE'}
            </div>
          </div>
        </div>

        {/* Content Grid - Compact Layout */}
        <div class="relative z-10 p-6">
          <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
            {/* Left Column - Booking Details */}
            <div class="lg:col-span-2 space-y-4">
              {/* Confirmation Code - Prominent */}
              <div
                class="bg-gradient-to-r from-slate-50 to-slate-100 rounded-xl p-4 shadow-md hover:shadow-lg transition-shadow duration-300"
              >
                <div class="flex items-center justify-between">
                  <div>
                    <p class="text-sm text-slate-600 font-medium">Código de Confirmación</p>
                    <p class="text-2xl font-bold text-slate-800 tracking-wider">
                      {confirmationCode}
                    </p>
                  </div>
                  <div class="text-right">
                    <p class="text-sm text-slate-600 font-medium">Referencia</p>
                    <p class="text-lg font-semibold text-slate-800">{bookingReference}</p>
                  </div>
                </div>
              </div>

              {/* Guest Information */}
              <div
                class="bg-white border border-slate-200 rounded-xl p-4 shadow-sm hover:shadow-md transition-shadow duration-300"
              >
                <h3 class="text-lg font-semibold text-slate-800 mb-3 flex items-center">
                  <svg
                    class="w-5 h-5 text-slate-600 mr-2"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"
                    ></path>
                  </svg>
                  Información del Huésped
                </h3>
                <div class="grid grid-cols-2 gap-4">
                  <div>
                    <p class="text-sm text-slate-600">Nombre</p>
                    <p class="font-semibold text-slate-800">{pilgrimName}</p>
                  </div>
                  <div>
                    <p class="text-sm text-slate-600">Tipo de Habitación</p>
                    <p class="font-semibold text-slate-800">{roomTypeText}</p>
                  </div>
                </div>
              </div>

              {/* Stay Dates - Compact */}
              <div
                class="bg-gradient-to-br from-blue-50 to-indigo-50 rounded-xl p-4 shadow-sm border border-blue-100"
              >
                <h3 class="text-lg font-semibold text-slate-800 mb-3 flex items-center">
                  <svg
                    class="w-5 h-5 text-blue-600 mr-2"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"
                    ></path>
                  </svg>
                  Fechas de Estancia
                </h3>
                <div class="grid grid-cols-3 gap-4">
                  <div class="text-center">
                    <p class="text-sm text-slate-600">Llegada</p>
                    <p class="font-bold text-slate-800 text-lg">
                      {new Date(arrivalDate).toLocaleDateString('es-ES')}
                    </p>
                  </div>
                  <div class="text-center">
                    <p class="text-sm text-slate-600">Salida</p>
                    <p class="font-bold text-slate-800 text-lg">
                      {new Date(departureDate).toLocaleDateString('es-ES')}
                    </p>
                  </div>
                  <div class="text-center">
                    <p class="text-sm text-slate-600">Noches</p>
                    <p class="font-bold text-emerald-600 text-lg">{nights}</p>
                  </div>
                </div>
              </div>
            </div>

            {/* Right Column - Summary & QR */}
            <div class="space-y-4">
              {/* Price Summary - 3D Card */}
              <div
                class="bg-gradient-to-br from-emerald-50 to-green-50 rounded-xl p-4 shadow-lg border border-emerald-100 transform hover:scale-105 transition-transform duration-300"
              >
                <h3 class="text-lg font-semibold text-slate-800 mb-3 flex items-center">
                  <svg
                    class="w-5 h-5 text-emerald-600 mr-2"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
                    ></path>
                  </svg>
                  Resumen de Pago
                </h3>
                <div class="space-y-2">
                  <div class="flex justify-between">
                    <span class="text-slate-600">{nights} noches × {roomTypeText}</span>
                    <span class="font-semibold">€{totalAmount}</span>
                  </div>
                  <div class="border-t border-emerald-200 pt-2">
                    <div class="flex justify-between text-lg font-bold">
                      <span class="text-slate-800">Total</span>
                      <span class="text-emerald-600">€{totalAmount}</span>
                    </div>
                  </div>
                </div>
              </div>

              {/* QR Code Placeholder */}
              <div class="bg-white rounded-xl p-4 shadow-lg border border-slate-200 text-center">
                <h4 class="text-sm font-semibold text-slate-700 mb-2">Código QR</h4>
                <div
                  class="w-24 h-24 mx-auto bg-slate-100 rounded-lg flex items-center justify-center shadow-inner"
                >
                  <svg
                    class="w-12 h-12 text-slate-400"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M12 4v1m6 11h2m-6 0h-2v4m0-11v3m0 0h.01M12 12h4.01M16 20h4M4 12h4m12 0h.01M5 8h2a1 1 0 001-1V5a1 1 0 00-1-1H5a1 1 0 00-1 1v2a1 1 0 001 1zm12 0h2a1 1 0 001-1V5a1 1 0 00-1-1h-2a1 1 0 00-1 1v2a1 1 0 001 1zM5 20h2a1 1 0 001-1v-2a1 1 0 00-1-1H5a1 1 0 00-1 1v2a1 1 0 001 1z"
                    ></path>
                  </svg>
                </div>
                <p class="text-xs text-slate-500 mt-2">Escanea para verificar</p>
              </div>

              {/* Action Buttons */}
              <div class="space-y-3">
                <button
                  class="w-full bg-gradient-to-r from-green-500 to-emerald-600 text-white py-3 px-4 rounded-xl font-semibold shadow-lg hover:shadow-xl transform hover:scale-105 transition-all duration-300"
                >
                  Descargar Confirmación
                </button>
                <button
                  class="w-full bg-white border-2 border-slate-300 text-slate-700 py-3 px-4 rounded-xl font-semibold shadow-md hover:shadow-lg transform hover:scale-105 transition-all duration-300"
                >
                  Añadir al Calendario
                </button>
              </div>
            </div>
          </div>

          {/* Important Information - Compact */}
          <div
            class="mt-6 bg-gradient-to-r from-amber-50 to-orange-50 rounded-xl p-4 shadow-lg border border-amber-200"
          >
            <div class="flex items-start">
              <svg
                class="w-6 h-6 text-amber-500 mr-3 flex-shrink-0 mt-1"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"
                ></path>
              </svg>
              <div class="flex-1">
                <h4 class="font-semibold text-amber-800 mb-2">Información Importante</h4>
                <ul class="text-sm text-amber-700 space-y-1">
                  <li>• Check-in: 14:00 - 22:00 | Check-out: antes de las 11:00</li>
                  <li>• Presenta tu documentación válida (DNI/NIE/Passport)</li>
                  <li>• Llegadas después de las 22:00 deben ser notificadas</li>
                  <li>• Código de acceso: Se proporcionará 24h antes de tu llegada</li>
                </ul>
              </div>
            </div>
          </div>

          {/* Contact Information */}
          <div class="mt-4 text-center">
            <p class="text-slate-600 text-sm">
              ¿Necesitas ayuda?
              <a href="tel:+34924123456" class="text-green-600 font-semibold hover:text-green-700"
                >+34 924 123 456</a
              >
              |
              <a
                href="mailto:info@carrascalejo.es"
                class="text-green-600 font-semibold hover:text-green-700">info@carrascalejo.es</a
              >
            </p>
          </div>
        </div>
      </div>

      {/* Secondary Actions */}
      <div class="mt-6 text-center space-x-4">
        <a href="/" class="text-green-600 font-semibold hover:text-green-700 transition-colors">
          ← Volver al Inicio
        </a>
        <a href="/booking" class="text-slate-600 hover:text-slate-800 transition-colors">
          Nueva Reserva
        </a>
      </div>
    </div>
  </main>
</Layout>

<style>
  .perspective-1000 {
    perspective: 1000px;
  }

  .transform-translate-z-10 {
    transform: translateZ(10px);
  }
</style>
